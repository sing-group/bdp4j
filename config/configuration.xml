<?xml version="1.0"?>
<configuration>
    <!-- General properties for the app. -->
    <general>
        <samplesFolder>./samples</samplesFolder>
        <pluginsFolder>./plugins</pluginsFolder>
        <outputDir>./output</outputDir>
    </general>

    <!-- Pipe structure that is going to be used -->
    <pipeline>
        <serialPipes>
            <serialPipes>
                <pipe>
                    <name>File2TargetAssignPipe</name>
                </pipe>
                <serialPipes>
                    <pipe>
                        <name>FileSizePipe</name>
                        <params>
                            <pipeParameter>
                                <name>propName</name>
                                <value>The file size</value>
                            </pipeParameter>
                        </params>
                    </pipe>
                </serialPipes>
            </serialPipes>
            <pipe>
                <name>File2StringPipe</name>
            </pipe>
            <parallelPipes>
                <pipe>
                    <name>MeasureLengthPipe</name>
                </pipe>
            </parallelPipes>
            <serialPipes>
                <pipe>
                    <name>GenerateOutputPipe</name>
                    <params>
                        <pipeParameter>
                            <name>outFile</name>
                            <value>changedOutput.csv</value>
                        </pipeParameter>
                    </params>
                </pipe>
            </serialPipes>
        </serialPipes>
    </pipeline>
</configuration>