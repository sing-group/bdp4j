<?xml version="1.0"?>
<configuration>
    <!-- General properties for the app. -->
    <general>
        <samplesFolder>./samples</samplesFolder>
        <pluginsFolder>./plugins</pluginsFolder>
        <outputDir>./output</outputDir>
    </general>

    <!-- Pipe structure that is going to be used -->
    <pipeline>
        <serialPipes>
            <serialPipes>
                <pipe>
                    <name>File2TargetAssignPipe</name>
                </pipe>
                <serialPipes>
                    <pipe>
                        <name>FilesizePipe</name>
                    </pipe>
                </serialPipes>
            </serialPipes>
            <pipe>
                <name>File2StringPipe</name>
            </pipe>
            <parallelPipes>
                <pipe>
                    <name>MeasureLengthPipe</name>
                </pipe>
                <pipe>
                    <name>GenerateOutputPipe</name>
                    <params>
                        <pipeParameter>
                            <name>outFile</name>
                            <description>The file to store the CSV representation of instances</description>
                            <defaultValue>output.csv</defaultValue>
                        </pipeParameter>
                    </params>
                </pipe>
            </parallelPipes>
        </serialPipes>
    </pipeline>
</configuration>